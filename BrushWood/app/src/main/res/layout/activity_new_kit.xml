<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/newKit"
    tools:context=".MapsActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <LinearLayout
        android:id="@+id/bigContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="@color/white">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBarMain"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:elevation="20dp">

            <ImageButton
                android:id="@+id/buttonBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:padding="5dp"
                android:src="@drawable/back_arrow" />

            <TextView
                android:id="@+id/activityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:text="НОВАЯ СБОРКА"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/buttonShare"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000"
                android:padding="5dp"
                android:src="@drawable/share" />

        </Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <ImageView
                android:id="@+id/textViewPhoto"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:importantForAccessibility="no" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Toolbar
            android:id="@+id/toolBar0"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:background="#FFFFFF"
            android:elevation="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textSize0"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginStart="59dp"
                android:gravity="left|center"
                android:background="@drawable/textview_underline"
                android:textSize="15dp"
                tools:ignore="RtlHardcoded" />


            <ImageButton
                android:id="@+id/buttonAdd0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_gravity="right"
                android:textSize="15dp"
                android:layout_marginRight="15dp"
                android:background="#0000"
                android:padding="5dp"
                android:src="@drawable/add" />

        </Toolbar>

        <Toolbar
            android:id="@+id/toolBar1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:elevation="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фото:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/photoName"
                android:textSize="15dp"
                android:gravity="left|center"
                android:layout_height="match_parent"
                android:layout_width="165dp"
                android:layout_marginLeft="96.5dp"
                android:background="@drawable/textview_underline" />

            <ImageButton
                android:id="@+id/buttonAdd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="#0000"
                android:padding="5dp"
                android:src="@drawable/galery" />

            <ImageButton
                android:id="@+id/buttonAdd22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="#0000"
                android:padding="5dp"
                android:src="@drawable/snap" />

        </Toolbar>

        <Toolbar
            android:id="@+id/toolBar2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:elevation="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:textSize="15dp"
                android:layout_marginLeft="93dp" />

            <ImageButton
                android:id="@+id/buttonAdd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="#0000"
                android:padding="5dp"
                android:src="@drawable/add" />

        </Toolbar>

        <Toolbar
            android:id="@+id/toolBar3"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:background="#FFFFFF"
            android:elevation="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Объём: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textSize"
                android:layout_height="match_parent"
                android:layout_width="210dp"
                android:layout_marginLeft="81dp"
                android:gravity="left|center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:background="@drawable/textview_underline" />



            <ImageView
                android:id="@+id/buttonAdd4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="#0000"
                android:padding="5dp"
                android:src="@drawable/add" />

        </Toolbar>

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:elevation="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Координаты: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fromCoords"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="39dp"
                android:background="@drawable/textview_underline"
                android:textSize="15dp" />


            <ImageButton
                android:id="@+id/buttonAdd5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="#0000"
                android:padding="5dp"
                android:src="@drawable/arrow" />

        </Toolbar>

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#FFFFFF"
            android:paddingBottom="10dp"
            android:elevation="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Источник: "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/toCoords"
                android:layout_height="match_parent"
                android:layout_width="210dp"
                android:layout_marginLeft="60dp"
                android:textSize="15dp"
                android:background="@drawable/textview_underline" />


            <ImageButton
                android:id="@+id/buttonAdd6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:background="#0000"
                android:padding="5dp"
                android:src="@drawable/arrow" />

        </Toolbar>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSubmit"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="#61BFEA"
                android:fontFamily=""
                android:gravity="center"
                android:text="Сохранить сбор"
                map:cornerRadius="10dp"
                android:elevation="20dp"
                android:layout_marginTop="15dp"/>

    </LinearLayout>


    <!--    <com.google.android.material.navigation.NavigationView-->
